<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'users/sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'users/sessions', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
    <div class="sessions">
      <div class="sessions-content">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <ul>
              <li>
                <%= value %>
              </li>
            </ul>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
